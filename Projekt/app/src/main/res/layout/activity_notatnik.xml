<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Menu" />

    <!-- First Line: Text "trafione/ogólnie" -->
    <TextView
        android:id="@+id/statisticsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="trafione/ogólnie"
        android:textSize="18sp" />

    <!-- Second Line: Counters "made/shots" -->
    <TextView
        android:id="@+id/countersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statisticsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="0/0"
        android:textSize="18sp" />

    <!-- Third Line: Buttons "Made" and "Miss" -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countersTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/madeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made" />

        <Button
            android:id="@+id/missButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miss" />

    </LinearLayout>

    <!-- Fourth Line: Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save Stats" />
    <Button
        android:id="@+id/clearDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Clear Data" />
    <Button
        android:id="@+id/printButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/clearDataButton"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:text="Print Data" />


</RelativeLayout>
